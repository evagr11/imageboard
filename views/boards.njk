{% extends "base.njk" %}

{% block content %}
<h1>Boards</h1>
<ul>
    {% for board in boards %}
        <li>
            <a href="/boards/{{ board.id }}">{{ board.name }}</a>
        </li>
    {% endfor %}
</ul>

<form action="/boards" method="POST">
    <input type="text" name="name" placeholder="New Board Name" required>
    <button type="submit">Create Board</button>
</form>
{% endblock %}